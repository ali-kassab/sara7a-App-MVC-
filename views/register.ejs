<%- include('./shared/header.ejs')%>

<div class="container text-center my-5">
  <div class="user my-3">
    <i class="far fa-edit user-icon"></i>
    <h4 class="login">Register</h4>
  </div>
  <% if (errorquery) { %>
  <div class="alert alert-danger my-2 w-50 m-auto"><%=errorquery%></div>
  <% } %> 
  
  <% if (error) { %> <% for(let i = 0; i < error.length; i++) { %>
  <div class="alert alert-danger"><%=error[0]%></div>
  <% } %> <% } %>

  <div class="card p-5 w-50 m-auto">
    <form method="POST" action="/handelRegister">
      <input
        class="form-control"
        placeholder="Enter your Name"
        type="text"
        name="name"
      />
      <input
        class="form-control my-2"
        placeholder="Enter your email"
        type="email"
        name="email"
      />
      <input
        class="form-control"
        placeholder="Enter your Password"
        type="password"
        name="password"
      />
      <input
        class="form-control my-2"
        placeholder="Password Confirmation"
        type="password"
        name="rePassword"
      />
      <button class="btn btn-default-outline my-4 w-100 rounded">
        Register
      </button>
      <a class="btn btn-default-outline" href="/login">Login</a>
    </form>
  </div>
</div>

<%- include('./shared/footer.ejs')%>
